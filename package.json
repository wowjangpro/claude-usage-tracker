{
  "name": "claude-usage-tracker",
  "version": "1.0.0",
  "description": "Claude Code 사용량 추적 및 자동 업로드 앱",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "vite build && electron-builder",
    "start": "electron ."
  },
  "keywords": [
    "claude",
    "electron",
    "usage-tracker"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "javascript-obfuscator": "^4.1.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1",
    "webpack-obfuscator": "^3.5.1"
  },
  "dependencies": {
    "chart.js": "^4.4.7",
    "form-data": "^4.0.4",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1"
  },
  "build": {
    "appId": "com.claude.usage-tracker",
    "productName": "Claude Usage Tracker",
    "asar": true,
    "asarUnpack": [],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Claude Usage Tracker",
      "sign": false
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    }
  }
}
